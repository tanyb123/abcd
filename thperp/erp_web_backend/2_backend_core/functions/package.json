{
  "name": "erp-web-backend-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for ERP Web Backend",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
