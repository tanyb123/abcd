{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "compileOnSave": true,
  "include": ["src"],
  "files": [
    "src/poExcelGenerator.ts",
    "src/quotationExcelGenerator.ts",
    "src/deliveryNoteExcelGenerator.ts",
    "src/contractGenerator.ts",
    "src/poReceiptConfirmation.ts",
    "src/notificationTriggers.ts"
  ]
}
